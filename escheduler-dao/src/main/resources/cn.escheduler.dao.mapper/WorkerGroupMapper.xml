<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.escheduler.dao.mapper.WorkerGroupMapper">
    <select id="queryAllWorkerGroup" resultType="cn.escheduler.dao.entity.WorkerGroup">
        select *
        from t_escheduler_worker_group
        order by update_time desc
    </select>
    <select id="queryWorkerGroupByName" resultType="cn.escheduler.dao.entity.WorkerGroup">
        select *
        from t_escheduler_worker_group
        where `name` = #{name}
    </select>
    <select id="queryListPaging" resultType="cn.escheduler.dao.entity.WorkerGroup">
        select *
        from t_escheduler_worker_group
        where 1 = 1
        <if test="searchVal != null and searchVal != ''">
            and  name like concat('%', #{searchVal}, '%')
        </if>
        order by  update_time desc
    </select>
</mapper>